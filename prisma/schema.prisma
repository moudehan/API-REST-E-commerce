generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Utilisateur {
  id      Int       @id @default(autoincrement())
  nom     String
  email    String  @unique
  commandesss Commande[]
}

model Commande {
  id           Int       @id @default(autoincrement())
  utilisateur  Utilisateur @relation(fields: [utilisateurId], references: [id])
  utilisateurId Int
  produit  Produit @relation(fields: [produitId], references: [id])
  produitId Int
  quantity  Int
}

model Produit {
  id          Int     @id @default(autoincrement())
  nom         String
  description String
  prix        Float
  commandes   Commande[]
}